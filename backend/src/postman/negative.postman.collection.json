{
    "info": {
        "name": "Camping Advisor â€“ Negative",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
        "name": "GET /campsites without token",
        "request": {
            "method": "GET",
            "url": "{{baseUrl}}/campsites"
        },
        "event": [
            {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                "pm.request.headers.remove('Authorization');"
                ]
            }
            },
            {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                "pm.test('returns 401', () => pm.response.to.have.status(401));",
                "pm.test('responds with JSON', () => pm.response.to.be.json);",
                "pm.test('has error message', () => pm.expect(pm.response.json()).to.have.property('error'));"
                ]
            }
            }
        ]
        },
        {
        "name": "POST /campsites with bad body",
        "request": {
            "method": "POST",
            "header": [
            { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/campsites",
            "body": {
            "mode": "raw",
            "raw": "{}"
            }
        },
        "event": [
            {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                "pm.test('returns 400', () => pm.response.to.have.status(400));",
                "pm.test('responds with JSON', () => pm.response.to.be.json);"
                ]
            }
            }
        ]
        },
        {
        "name": "GET /campsites random id 404",
        "request": {
            "method": "GET",
            "url": "{{baseUrl}}/campsites/{{$uuid}}"
        },
        "event": [
            {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                "pm.test('returns 404', () => pm.response.to.have.status(404));",
                "pm.test('responds with JSON', () => pm.response.to.be.json);",
                "pm.test('has error message', () => pm.expect(pm.response.json()).to.have.property('error'));"
                ]
            }
            }
        ]
        }
    ],
    "event": [
        {
        "listen": "prerequest",
        "script": {
            "type": "text/javascript",
            "exec": [
            "const token = pm.environment.get('token');",
            "if (token) {",
            "  pm.request.headers.add({ key: 'Authorization', value: `Bearer ${token}` });",
            "} else {",
            "  pm.request.headers.remove('Authorization');",
            "}"
            ]
        }
        }
    ],
    "variable": []
}
